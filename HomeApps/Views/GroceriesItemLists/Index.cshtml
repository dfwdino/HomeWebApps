@model IEnumerable<HomeApps.ItemList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_GrocerieLayouts.cshtml";

}

<h2>Items Needed</h2>

<p>
    @Html.ActionLink("Add Item", "Create") - @Html.ActionLink("All Items", "ShowAllItems")
</p>

<table id="ItemList" class="display">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayName("Items")
            </th>
            <th>
                @Html.DisplayName("StoreName")
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr name="FullItem{@item.ItemListID}">
                <td>
                    @if (item.NumberOfItems != null)
                    {
                        <span>@item.NumberOfItems</span>
                    }
                </td>
                <td class="got-link" id=@item.ItemListID data-request-url="@Url.Action("GotItem", "GroceriesItems")"
                    @if (item.SizeType?.SizeTypeName != null)
                    {
                        <span>@item.SizeType.SizeTypeName of</span>
                    }

                    @Html.DisplayFor(modelItem => item.Item.ItemName)

                </td>

                <td>
                    @if (item.Store != null)
                    {
                        <sapn>@Html.DisplayFor(modelItem => item.Store.StoreName) - </sapn>
                    }
                    @Html.ActionLink("Edit", "Edit", new { id = item.ItemListID })
                </td>

            </tr>
        }
    </tbody>

</table>

<script src="~/Scripts/jquery-3.0.0.js"></script>
<link href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" rel="Stylesheet"></link>
<script src="~/Scripts/jquery-ui.js"></script>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $('td.got-link').click(OnGotClick);
        $('#ItemList').DataTable({ searching: false, paging: false, info: false, order: [] });
    });

    function OnGotClick(e) {
        var itemID = e.target.id;
        console.log(itemID)

        var div = document.getElementsByName('FullItem{' + itemID + '}');
        console.log(div);
        div[0].outerHTML = "";
        //div.remove();


        var url = $(this).data('request-url');

        $.post(url, { ItemListID: itemID }, function (data) {


        });
    }

</script>
