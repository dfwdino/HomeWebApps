@model HomeApps.Models.TheEventDetails

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MateLayout.cshtml";
}

<div>
    <h4>@Html.DisplayFor(model => model.EventName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Date:") - @Html.Label(Model.DateOfEvent)
        </dt>

        <div class="BottomPadding20"></div>

        @foreach (var item in Model.Actions)
        {
            <div class="BottomPadding20">
                <span style="font-weight:700">@item.Giving</span>
                    <span style="color:Highlight;font-style:italic">@item.Action</span>
                <span style="font-weight:700">@item.Recving</span>
            </div>
        }


    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EventID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


<link href="~/Content/Website/HomeApps.Default.css" rel="stylesheet" />
