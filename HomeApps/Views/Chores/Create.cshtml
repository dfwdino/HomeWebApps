@model HomeApps.Chore

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ChorsesLayout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
